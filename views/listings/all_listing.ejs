<%- layout('./layouts/boilerplate.ejs') %>

<style>
    .filters{
        padding-top: 1rem;
        /* margin-left: 1rem; */
        display: flex;
        flex-wrap: wrap;
        height: 6rem;
    }
    .filter{
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin-left: 2rem;
        opacity: .7;
    }
    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }
    .tax-info{
        display: flex;
        align-items: center;
        border: .1rem rgb(180, 175, 175) solid;
        border-radius: 1rem;
        height: 3rem;
        margin:.5rem 0rem 0rem 5rem;
        padding: 0rem 1rem;
    }
    .taxes{
        display: none;
    }
</style>

<body>
    <div class="filters">
        <div class="filter">
            <i class="fa-solid fa-umbrella-beach"></i>
            <p>Beach</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-fire"></i>
            <p>Trending</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-bed"></i>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-city"></i>
            <p>Iconic cities</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-mountain-sun"></i>
            <p>Mountain</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-chess-rook"></i>
            <p>Castles</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-person-swimming"></i>
            <p>Amaging Pools</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-campground"></i>
            <p>Camping</p>
        </div>
        <div class="filter">
            <i class="fa-solid fa-tractor"></i>
            <p>Farms</p>
        </div>


        <div class="tax-info">
            <div class="form-check form-switch form-check-reverse">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
                <label class="form-check-label" for="flexSwitchCheckReverse">Display total after taxes</label>
              </div>
        </div>
    </div>
    <div class="all_cards">
        <%for(let list of all_listings){%>
            <a class="card-link"  href="/listings/view/<%=list._id%>">
                <div  class="card" style="width: 18rem;">
                    <img src="<%=list.image.url%>" class="card-img-top" alt="/place">
                    <!-- this div of class 'card-img-overlay' is use to write on img , and it used to place after img -->
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                      <p class="card-text"><b><%=list.title%> </b><br>
                        &#8377; <%= list.price.toLocaleString('en-IN') %> /Night
                        <i class='taxes'>+18% GST</i>
                    </p>
                    </div>
                </div>
            </a>
        <%}%>
    </div>

    <script>
        let taxbtn=document.querySelector('#flexSwitchCheckReverse');
        console.log(taxbtn);
        taxbtn.addEventListener('click',()=>{
            let taxInfo=document.querySelectorAll('.taxes');
            for(let tax of taxInfo){
                if(tax.style.display!='inline')tax.style.display='inline';
                else tax.style.display='none';
            }
        }) 
    </script>
</body>