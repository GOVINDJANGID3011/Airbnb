<%- layout('./layouts/boilerplate.ejs') %>


<body>
        <div class="row"></div>
            <div class="col-8 offset-2">
                <br>
                <h1>Create a new listing</h1>
                <form method="post" action="/listings/add" novalidate class="needs-validation" enctype="multipart/form-data">


                <label for="title" class="form-label">Title</label>
                <input name=list[title] placeholder="write title" type="text" class="form-control" required>
                <div class="invalid-feedback">Title is required</div>

                <label for="title" class="form-label">Description</label>
                <textarea placeholder="write Description here" name=list[description]  class="form-control" required></textarea>
                <div class="invalid-feedback">Description is required</div>

                <label for="title" class="form-label">Image URL</label>
                <input name=list[image][url] placeholder="write image url" type="file" class="form-control">
                
                <div class="row">
                    <div class="col-md-4" >
                        <label for="title" class="form-label">Price</label>
                        <input name=list[price] placeholder='write price' type="text" class="form-control" required>
                        <div class="invalid-feedback">Enter valid price</div>
                    </div>
                    <div class="col-md-8">
                        <label for="title" class="form-label">Location</label>
                        <input name=list[location] placeholder="write Location " type="text" class="form-control" required>
                        <div class="invalid-feedback">Enter valid location</div>
                    </div>
                </div>

                <label for="title" class="form-label">Country</label>
                <input name=list[country] placeholder="write Country" type="text" class="form-control" required>
                <div class="invalid-feedback">Enter valid country</div>


                <br>
                <button class="btn-dark btn" >Add</button>
            </div>
            
        </div>
        
    </form>
</body>