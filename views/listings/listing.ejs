<%- layout('./layouts/boilerplate.ejs') %>

<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h1 class="mt-2 mb-2"><%= list.title %></h1>
            <div  class="card">
                <img src="<%=list.image.url%>" class="card-img-top" style="height: 25rem;" alt="/place">
                <div class="card-body mb-1">
                    <p>Hosted by <%= list.owner.username %></p>
                    <p class="card-text"><b><%=list.title%> </b>
                        <br><%=list.description%>
                        <br> &#8377; <%= list.price.toLocaleString('en-IN') %> /Night
                        <br><%= list.location %>
                        <br><%= list.country %>
                    </p>
                </div>
                <% if(currUser && list.owner._id.equals(currUser._id)){ %>
                <div class="row">
                    <div class="col-2">
                        <button class="btn btn-dark btn-edit"><a style="text-decoration: none;" href="/listings/edit/<%=list._id%>">Edit</a></button>
                    </div>
                    <div class="col-3">
                        <form method="post" action="/listings/delete/<%=list._id%>?_method=delete">
                            <button class="btn btn-dark btn-delete ">Delete</button>
                        </form>
                    </div>
                </div>
                <% } %>
            </div>
            
            <hr>
            <% if(currUser){ %>
            <form method="post" action="/listings/<%= list._id %>/review/add" novalidate class="needs-validation">
                <h3>Add a review</h3>
                <fieldset class="starability-slot">
                    <legend>Rating:</legend>
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value=1 checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value=1 />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value=2 />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value=3 />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value=4 />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value=5 />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
  
                <legend>comment:</legend>
                <textarea name="review[comment]" class="" placeholder="write your review here" rows="5" cols="15" style="width: 100%;" required></textarea>
                <div class="invalid-feedback">Enter valid Review</div>
                <br>
                <button class="btn btn-dark mb-2">Submit</button>
            </form>
            <% } %>
            
        </div>
    </div>
    
    <div class="row">
        <div class="col-8 offset-2">
            <% if(list.reviews.length) { %>
                <h3>Reviews</h3>
                <div class="row">
                    <% for (let review of list.reviews) { %>
                        <div class="col-md-6 mb-2">
                            <div class="card review-card">
                                <div class="card-body mb-0">
                                    <h5>@<%=review.author.username%></h5>
                                    <p class="starability-result" data-rating="<%= review.rating %>"></p>
                                    <p class="card-text mb-0"><%= review.comment %></p>
                                    <p><%= review.rating %> star</p>
                                    
                                    <% if(currUser && currUser._id.equals(review.author._id)){ %>
                                    <form method="POST" action="/listings/<%= list._id %>/review/delete/<%= review._id %>?_method=delete">
                                        <button type="submit" class="btn btn-dark">Delete</button>
                                    </form>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>

    <div class="row">
        <div class="col-8 offset-2">
            <h4>Where you'll be</h4>
            <div id="map"></div>
        </div>
    </div>


    <!-- all variable can be access in ejs file but not in js file so 
   this script tag is used for to create variable that can be accessed in js files  -->
    <script>
        const map_token='<%= process.env.MAP_TOKEN %>';
        const mapCoordinate=<%- JSON.stringify(list.geography.coordinates) %>;
        const maplocation=<%-JSON.stringify(list.location)%>
    </script>

     <!-- for map -->    
    <script src="/js/map.js"></script>
    <br>
</body>

