<script>
    const container = document.querySelector('.popup-image-container');
    const images = JSON.parse(container.dataset.images);

    // ❌ let x=(images.length-1)/6;
    // ✅ FIX: use proper block count
    let x = Math.ceil(images.length / 6);

    while (x--) {
        container.appendChild(createImageBlock());
    }

    // ✅ FIX: define index
    let index = 0;

    // ✅ FIX: collect boxes AFTER blocks are created
    const boxes = Array.from(container.querySelectorAll('.box'));

    // Fill images into boxes
    boxes.forEach(box => {
        if (index < images.length) {
            const img = document.createElement('img');
            img.src = images[index].url;
            img.alt = 'Listing Image';
            img.classList.add('popup-image');
            img.style.width = '100%';
            img.style.height = '100%';
            img.style.objectFit = 'cover';
            box.appendChild(img);
            box.style.display = 'block';
            index++;
        }else {
            box.style.display="none";
        }
    });

    function createImageBlock() {
        const block = document.createElement('div');
        block.className = 'rows_container image-block-template';

        block.innerHTML = `
            <div class="row">
                <div class="box big"></div>
                <div class="column">
                    <div class="box"></div>
                    <div class="box"></div>
                </div>
            </div>
            <br>
            <div class="row">
                <div class="column">
                    <div class="box"></div>
                    <div class="box"></div>
                </div>
                <div class="box big"></div>
            </div>
        `;
        return block;
    }
</script>

<!-- logic for full image popup -->
 <script>
    const fullscreenPopup = document.getElementById('fullscreen-popup');
    const fullscreenOverlay = document.getElementById('fullscreen-overlay');
    const fullscreenImage = document.getElementById('fullscreen-image');
    const closeFullscreenBtn = document.getElementById('closeFullscreen');

    // Event delegation (works for dynamically added images)
    document.addEventListener('click', function (e) {
        if (e.target.classList.contains('popup-image')) {
            fullscreenImage.src = e.target.src;
            fullscreenPopup.style.display = 'block';
            fullscreenOverlay.style.display = 'block';
        }
    });

    // Close fullscreen popup
    closeFullscreenBtn.addEventListener('click', closeFullscreen);
    fullscreenOverlay.addEventListener('click', closeFullscreen);

    function closeFullscreen() {
        fullscreenPopup.style.display = 'none';
        fullscreenOverlay.style.display = 'none';
